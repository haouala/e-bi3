<Page
    x:Class="App4.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App4"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="317*">
            </RowDefinition>
            <RowDefinition Height="131*"/>
            <RowDefinition Height="192*"/>
        </Grid.RowDefinitions>
        <Grid.Background>

            <ImageBrush Stretch="Fill" ImageSource="Assets/Logobick.jpg"/>
        </Grid.Background>
        <RelativePanel Grid.RowSpan="3">
            <Image x:ConnectionId='1' x:Name="image" HorizontalAlignment="Left" VerticalAlignment="Top" Source="Assets/TLSLogo_redShadow.png" Margin="0,-8,0,0"/>
            <Image x:ConnectionId='2' x:Name="image1" HorizontalAlignment="Left" Margin="2,208,-2,-28" VerticalAlignment="Top"  Source="Assets/Categorie_Header.png"/>
            <TextBox x:ConnectionId='3' x:Name="textBox"  HorizontalAlignment="Center"  TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="240"    Height="19" RelativePanel.Below="" RelativePanel.AlignBottomWith="image1" Margin="62,27.2,-2,-52" Background="#FF358EB7" RequestedTheme="Light"  />
            <Image x:ConnectionId='4' x:Name="image2" HorizontalAlignment="Left" Margin="-10,-130,0,0" Grid.Row="3" VerticalAlignment="Top" Source="Assets/SignInWith.png" RelativePanel.AlignBottomWith="" RelativePanel.AlignTopWith="image3"/>
            <PasswordBox x:ConnectionId='5' x:Name="textBox_Copy" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="240"    Height="19" RelativePanel.AlignBottomWith="textBox" RelativePanel.AlignTopWith="" Margin="62,90,-62,-90" RelativePanel.AlignVerticalCenterWith="textBox" Background="#FF231F20" RequestedTheme="Dark"  />

            <Image x:ConnectionId='6' x:Name="image3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,-100,0,0" Source="Assets/FB.png" Height="89" Width="97"  RelativePanel.AlignBottomWith="" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignTopWith="textBlock"/>
            <Image x:ConnectionId='7' x:Name="image3_Copy" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="-15.333,-100,15.667,0" Source="Assets/googleplus.png" Height="89" Width="97"  RelativePanel.AlignBottomWith="" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignTopWith="textBlock"/>

            <Image x:ConnectionId='8' x:Name="image3_Copy1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-14.667,-100,0,0" Source="Assets/twitter.png" Height="89" Width="104"  RelativePanel.AlignBottomWith="" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignTopWith="textBlock"/>

            <StackPanel HorizontalAlignment="Left" Height="0" VerticalAlignment="Top" Width="0"/>
            <Button x:ConnectionId='9' x:Name="button" Content="Login" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="108" Margin="63,148,-106.2,-138" Background="#FFFFCB31" RequestedTheme="Dark" RelativePanel.AlignBottomWith="textBox_Copy" BorderThickness="3,2,2,2"                     />
            <Button x:ConnectionId='10' x:Name="button_Copy" Content="Visiter" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="108" Margin="176,148,-219.2,-138" Background="#FFF83A70" RequestedTheme="Dark" RelativePanel.AlignBottomWith="textBox_Copy" BorderThickness="3,2,2,2"                          />
            <TextBlock x:ConnectionId='11' x:Name="textBlock" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="Pas de compte TLS encore ? SignUp" VerticalAlignment="Top" Width="246" RequestedTheme="Dark" RelativePanel.AlignBottomWith="" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignHorizontalCenterWithPanel="True" Margin="0,0,0,15"/>
            <Image x:ConnectionId='12' x:Name="image4" HorizontalAlignment="Left" VerticalAlignment="Top" Source="Assets/Password.png" Height="38" Width="44" Margin="12,96,-2,-96" RelativePanel.AlignLeftWith="textBox_Copy" RelativePanel.AlignBottomWith="textBox"/>
            <Image x:ConnectionId='13' x:Name="image5" HorizontalAlignment="Left" VerticalAlignment="Top" Source="Assets/LoginLock.png" Height="38" Width="44" Margin="18,53,-8,-91" RelativePanel.AlignLeftWith="textBox" RelativePanel.AlignBottomWith="" RelativePanel.AlignTopWith="image4"/>
            <Image x:ConnectionId='14' x:Name="image2_Copy1" HorizontalAlignment="Left" Margin="-7,-87,-438.6,-13" VerticalAlignment="Top" Source="Assets/back1.png" RelativePanel.AlignBottomWith="" RelativePanel.AlignTopWith="" RelativePanel.Below="image1" Height="100" Width="446" Stretch="Fill" RenderTransformOrigin="0.5,0.5" Opacity="0.8">
                <Image.RenderTransform>
                    <CompositeTransform ScaleY="-1"/>
                </Image.RenderTransform>
            </Image>
        </RelativePanel>

    </Grid>
</Page>

